---
import Layout from '../layouts/Layout.astro';
import GamesSection from '../components/GamesSection';
import '../styles/global.css';
---

<Layout title="Gridiron Dash - NFL Dashboard">
	<main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800">
		<div class="container py-8">
			<h1 class="text-4xl font-extrabold text-primary-700 dark:text-primary-200 mb-8 drop-shadow">
				Gridiron Dash
			</h1>
			
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- Live Games Section -->
				<section class="col-span-full bg-white/90 dark:bg-gray-900/80 rounded-xl shadow-lg p-6 border border-primary-100 dark:border-primary-800">
					<h2 class="text-2xl font-semibold text-primary-700 dark:text-primary-200 mb-4 flex items-center gap-2">
						<span>Live Games</span>
						<span class="inline-block bg-red-100 text-red-700 text-xs font-bold px-2 py-1 rounded">LIVE</span>
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
						<GamesSection client:load />
					</div>
				</section>

				<!-- League Stats Section -->
				<section class="col-span-full md:col-span-1 bg-gradient-to-br from-indigo-100 to-blue-50 dark:from-gray-800 dark:to-gray-900 rounded-xl shadow p-6 border border-primary-100 dark:border-primary-800">
					<h2 class="text-2xl font-semibold text-primary-700 dark:text-primary-200 mb-4 flex items-center gap-2">
						<span>League Statistics</span>
						<span class="inline-block bg-blue-100 text-blue-700 text-xs font-bold px-2 py-1 rounded">STATS</span>
					</h2>
					<ul class="space-y-2">
						<li class="flex justify-between"><span>Most Points:</span> <span class="font-bold text-primary-700 dark:text-primary-200">Kansas City Chiefs</span></li>
						<li class="flex justify-between"><span>Best Defense:</span> <span class="font-bold text-primary-700 dark:text-primary-200">San Francisco 49ers</span></li>
						<li class="flex justify-between"><span>Top QB:</span> <span class="font-bold text-primary-700 dark:text-primary-200">Patrick Mahomes</span></li>
						<li class="flex justify-between"><span>Top RB:</span> <span class="font-bold text-primary-700 dark:text-primary-200">Christian McCaffrey</span></li>
					</ul>
				</section>

				<!-- News Feed Section -->
				<section class="col-span-full md:col-span-1 bg-gradient-to-br from-yellow-50 to-orange-100 dark:from-gray-900 dark:to-gray-800 rounded-xl shadow p-6 border border-yellow-100 dark:border-yellow-800">
					<h2 class="text-2xl font-semibold text-yellow-700 dark:text-yellow-200 mb-4 flex items-center gap-2">
						<span>Latest News</span>
						<span class="inline-block bg-yellow-100 text-yellow-700 text-xs font-bold px-2 py-1 rounded">NEWS</span>
					</h2>
					<ul class="space-y-2">
						<li class="border-l-4 border-yellow-400 pl-2 text-gray-800 dark:text-yellow-100">Chiefs clinch playoff spot with last-minute win.</li>
						<li class="border-l-4 border-yellow-400 pl-2 text-gray-800 dark:text-yellow-100">49ers defense dominates in shutout victory.</li>
						<li class="border-l-4 border-yellow-400 pl-2 text-gray-800 dark:text-yellow-100">Eagles announce starting QB for next week.</li>
					</ul>
				</section>
			</div>

			<div class="bg-blue-500 text-white p-4 rounded mb-4">
				If you see a blue box with white text, Tailwind is working!
			</div>
			<div class="bg-yellow-200 text-yellow-800">
				Yellow background, dark yellow text
			</div>
		</div>
	</main>
</Layout>
