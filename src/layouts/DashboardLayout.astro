    font-size: 1rem;
    color: #64748b;
  }
  
  .dark .search-bar button {
    color: #94a3b8;
  }
  
  .user-menu {
    position: relative;
  }
  
  .user-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 0.5rem;
    color: #334155;
  }
  
  .dark .user-button {
    color: #f1f5f9;
  }
  
  .user-button:hover {
    background-color: #f1f5f9;
  }
  
