    background-color: #334155;
  }
  
  .user-avatar {
    font-size: 1.25rem;
  }
  
  .dashboard-content {
    flex: 1;
    padding: 2rem;
  }
  
  /* Responsive styles */
  @media (max-width: 1024px) {
    .search-bar {
      width: 200px;
    }
  }
  
  @media (max-width: 768px) {
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      transform: translateX(-100%);
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
    
    .dark .sidebar {
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
    }
    
    .sidebar-open {
      transform: translateX(0);
    }
    
    .mobile-menu-toggle {
      display: block;
    }
    
    .dashboard-header {
      padding: 1rem;
    }
    
    .search-bar {
      display: none;
    }
    
    .dashboard-content {
      padding: 1rem;
    }
  }
</style>